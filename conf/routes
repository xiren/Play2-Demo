# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/							controllers.ViewController.index()
GET		/question					controllers.ViewController.getQuestion()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# API
GET		/normal/question			controllers.QuestionController.getQuestion()
POST	/normal/answer				controllers.QuestionController.answer()
POST	/normal/question			controllers.QuestionController.addQuestion()
DELETE	/normal/question/:id		controllers.QuestionController.deleteQuestion(id:Integer)
PUT		/normal/question/:id		controllers.QuestionController.updateQuestion(id:Integer)
GET		/normal/question/:id		controllers.QuestionController.getQuestionById(id:Integer)
GET		/normal/questions			controllers.QuestionController.getAllQuestions()